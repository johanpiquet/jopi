{
  "name": "jopi",
  "version": "2.0.33",
  "license": "MIT",
  "homepage": "https://github.com/johanpiquet/jopijs",
  "keywords": [
    "express.js",
    "nextjs",
    "react",
    "react-ssr",
    "react-hydrate"
  ],
  "author": "Johan PIQUET",
  "description": "Admin tools for Jopi",
  "engines": {
    "node": ">=22.18.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "bun": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "src"
  ],
  "bin": "bin/jopi.js",
  "scripts": {
    "dev:tsc": "npx tsc --watch",
    "build": "npx tsc",
    "tsc": "npx tsc",
    "jopiLink": "npx jopi-mono link-add",
    "bun-publish": "npx tsc && bun publish",
    "start": "node ./dist/index.js init --dir ./temp",
    "clean": "rm -rf ./dist .turbo tsconfig.tsbuildinfo",
    "test:init:tutorial": "npx jopi init --template tutorial --dir ../../temp",
    "test:init:list-choices": "npx jopi init --dir ../../temp",
    "test:shadcn-add:test1": "npx jopi shadcn-add table chart --mod testShadInstaller --dir ../../__packages/__jopi-tutorial --yes",
    "test:shadcn-add:dashboard-01": "npx jopi shadcn-add  dashboard-01 --mod testShadInstaller --dir ../../__packages/__jopi-tutorial --yes",
    "test:shadcn-init": "npx jopi shadcn-init --dir ../../__packages/__jopi-tutorial",
    "test:mod-install": "npx jopi mod-install --dir ../../__packages/__jopi-tutorial",
    "test:mod-installThis": "npx jopi mod-install mod1 --dir ../../__packages/__jopi-tutorial",
    "test:mod-add": "npx jopi mod-new mod_toto --dir ../../__packages/__jopi-tutorial",
    "test:mod-new": "npx jopi mod-new myModuleName --dir ../../__packages/__jopi-tutorial",
    "test:mod-check": "npx jopi mod-check --dir ../../temp"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "jopijs": "workspace:^",
    "yargs": "^18.0.0"
  },
  "publishedDate": "12/21/2025",
  "publicPublishedDate": "12/20/2025"
}