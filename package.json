{
  "name": "jopi",
  "version": "2.0.16",
  "license": "MIT",
  "homepage": "https://github.com/johanpiquet/jopijs",
  "keywords": [
    "express.js",
    "nextjs",
    "react",
    "react-ssr",
    "react-hydrate"
  ],
  "author": "Johan PIQUET",
  "description": "Admin tools for Jopi",
  "engines": {
    "node": ">=22.18.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "bun": "./src/index.ts"
    }
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "src"
  ],
  "bin": "bin/jopi.js",
  "scripts": {
    "build": "npx tsc",
    "tsc": "npx tsc",
    "bun-publish": "npx tsc && bun publish",
    "start": "node ./dist/index.js init --dir ./temp",
    "clean": "rm -rf ./dist .turbo tsconfig.tsbuildinfo",
    "test:tutorial": "npx jopi init --template tutorial --dir ../../temp",
    "test:minimal": "npx jopi init --template minimal --dir ../../temp"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "dotenv": "^17.2.3",
    "jopi-toolkit": "workspace:^",
    "yargs": "^18.0.0"
  },
  "publishedDate": "12/7/2025",
  "publicPublishedDate": "11/19/2025"
}
